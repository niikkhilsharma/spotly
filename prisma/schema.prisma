generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum RoleEnum {
  ADMIN
  SELLER
  GUEST
}

model User {
  id          String   @id @default(cuid())
  name        String
  email       String   @unique
  password    String
  image       String?
  role        RoleEnum
  countryCode String
  phone       String
  dob         DateTime
}
